<div class="order">
    <div class="order__main-info">
        <div class="order__main-info-text">
            <div class="order__restaurant-title order__row-margin">
                {{restaurantTitle}}
            </div>
            <div class="order__date order__row-margin">
                {{date}}
<!--                2 октября 2021, 14:07-->
            </div>
            <div class="order__address order__row-margin">
                {{address}}
<!--                Россия, Москва, ул. Пушкина д. 14к2-->
            </div>
            {{#if status}}
                <div class="order__status order__row-margin order__status_done">
                    Выполнен
                </div>
            {{else}}
                <div class="order__status order__row-margin order__status_cancel">
                    Отменен
                </div>
            {{/if}}
        </div>
        <div class="order__image-wrapper">
            <img class="order__main-info-img" src="http://mir-s3-cdn-cf.behance.net/project_modules/1400_opt_1/96672465571661.5afc10a864fc2.jpg" alt="rest image">
        </div>
    </div>
    <div class="order__info">
        {{#each items}}
            <div class="order__item">
                <div class="order__item-title">
                    {{ name }}
                </div>

                <div class="order__item-num">
                    {{ num }} шт
                </div>

                <div class="order__item-cost">
                    {{ cost }} ₽
                </div>
            </div>
        {{/each}}
        <div class="order__item">
            <div class="order__delivery-title">
                Доставка
            </div>

            <div class="order__delivery-cost">
                {{costFFD}} ₽
            </div>
        </div>
        <div class="order__summary">
            <div class="order__summary-title">
                Итого
            </div>

            <div class="order__summary-cost">
                {{ summaryCost }} ₽
            </div>
        </div>
    </div>
</div>